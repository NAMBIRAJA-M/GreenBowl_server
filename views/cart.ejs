<!DOCTYPE html>
<html>

<head>
    <title>
        Cart
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no">
    <link rel="icon" href="../favicon.ico" type="image/x-icon">
    <!-- 
    <link rel="stylesheet" href="/styles/mediaqueries.css"> -->
    <link rel="stylesheet" href="/styles/cart.css">
    <link rel="Stylesheet" href="/styles/cartmediaqueries.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

</head>

<body>
    <% const count=1; %>
        <div class="backwardbtn">
            <button class="bbtn" onclick="window.location.href ='/menu'">
                <Back class="bi bi-arrow-left-circle-fill backbtn"></i>
            </button>
            <div class="myorders-container">
                <img src="/Assets/orders.png" style="width: 30px;">
                <p>My Orders</p>
            </div>
        </div>
        <div class="modal-overlay" id="modal-overlay"></div>

        <div class="orders-main-container">
            <div class="orders-section">

                <div class="orders-heading">
                    <button class="bbtn" onclick="window.location.href ='/cart'">
                        <Back class="bi bi-arrow-left-circle-fill backbtn"></i>
                    </button>
                    <p> My Orders</p>
                </div>
                <div class="orders-list">
                
                </div>
            </div>
        </div>
        </div>

        <div class="cart">
            <p class="section-heading"> Your Cart</p>
            <p class="slogon">Start your day with our delicious food menu</p>
            <div class="cart-container-main">
                <% if (orders && orders.length> 0) { %>
                    <% orders.forEach((order)=> { %>

                        <% const items=order %>

                            <div class="checkboxbtn">
                                <input type="checkbox" id="checkbox-<%=items.item_id%>" price="<%= items.price %>"
                                    class="custom-checkbox">
                                <label for="checkbox-<%=items.item_id %>">
                                    <div class="cart-section-<%= items.item_id %>">
                                        <div class="cart-container">
                                            <div class="image-container">
                                                <img src="<%= items.image %>" alt="item image" />
                                            </div>
                                            <div class="content-container">
                                                <div class="details-container">
                                                    <p class="details-heading">
                                                        <%= items.item_name %>
                                                    </p>
                                                    <p class="details-type">
                                                        (<%= items.type %>)
                                                    </p>
                                                </div>
                                                <div class="price-content">
                                                    <p id="details-price-<%= items.item_id %>" class="details-price">
                                                        Rs.<%= items.price %>
                                                    </p>
                                                    <div class="btn-container">
                                                        <button class="decrement incheck-<%=items.item_id   %>"
                                                            onclick="decrement('<%=items.item_id%>','<%=items.price%>')">
                                                            -
                                                        </button>
                                                        <p id="quantity-<%=items.item_id%>" class="quantity">
                                                            <%= count %>
                                                        </p>
                                                        <button class="increment  incheck-<%=items.item_id   %>"
                                                            onclick="increment('<%=items.item_id%>','<%=items.price%>')">
                                                            +
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="cart-data-<%= items.item_id %>"
                                            data-items='<%= JSON.stringify(items) %>'>
                                        </div>
                                    </div>
                                </label>
                                <div class="calc-container">
                                    <a class="deleteicon" href="/cart/delete/<%= items.item_id %>"><i
                                            class="bi bi-trash3"></i></a>
                                </div>
                            </div>



                            <% }) %>
            </div>
        </div>
        <div class="total-container">
            <p class="orders-count"> Your Orders (0)</p>
            <div class="pricesum">

                <p>Total :Rs</p>
                <p class="totalprice"> 0 </p>
            </div>
            <button id="addbtn" onclick="callCheckout()">Add to Proceed</button>


        </div>
        <% } else { %>
            <div class="elseclass">
                <img src="Assets/cartg.png" alt="buy">
                <p class="section-caption">Your bowl is feeling lonely</p>
                <a href="/menu"><button class="cbtnc">Start Ordering</button></a>
            </div>
            <% } %>



                <script src="https://code.jquery.com/jquery-3.7.1.js"
                    integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

                <script src="src/cart.js"></script>

                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
                <!-- Include Toastr JS -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>