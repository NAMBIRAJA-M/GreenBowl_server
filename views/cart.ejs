<!DOCTYPE html>
<html>

<head>
    <title>
        Cart
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no">
    <link rel="icon" href="../favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="/styles/mediaqueries.css">
    <link rel="stylesheet" href="/styles/cart.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

</head>


<body>
    <% const count=1; %>
        <div class="cart">
            <% console.log("from the cart.ejs file",orders) %>
                <% console.log(typeof orders); %>
                    <% const items=JSON.parse(orders); %>
                        <% console.log(items.type) %>
                            <p class="section-heading"> Your Cart</p>
                            <%# < if(items && count>0) {% %>
                                <div class="checkboxbtn">
                                    <input type="checkbox" id="checkbox1" class="custom-checkbox">
                                    <label for="checkbox1">
                                        <div class="cart-section">
                                            <div class="cart-container">
                                                <div class="image-container">
                                                    <img src=<%=items.image%> />
                                                </div>
                                                <div class="details-container">
                                                    <p class="details-heading">
                                                        <%= items.name %>
                                                    </p>
                                                    <p class="details-type">
                                                        (<%= items.type %>)
                                                    </p>
                                                </div>


                                                <div class="price-content">
                                                    <p class="details-price">
                                                        Rs.<%= items.price %>
                                                    </p>
                                                    <button class="decrement"> - </button>
                                                    <p class="quantity">
                                                        <%= count %>
                                                    </p>
                                                    <button class="increment"> + </button>

                                                </div>
                                            </div>
                                            <div id="cart-data" data-items='<%= JSON.stringify(items) %>'></div>
                                        </div>
                                    </label>
                                    <button class="deleteicon"><i class="bi bi-trash3"></i></button>

                                </div>

                                <div class="elseclass">
                                    <img src="Assets/cartg.png" alt="buy">
                                    <p class="section-caption">Your bowl is feeling lonely</p>
                                    <a href="/menu"><button class="cbtnc">Start Ordering</button></a>

                                </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <script src="src/cart.js"></script>
</body>

</html>