<html>

<head>
    <title>
        Orders
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="styles/checkout.css">
</head>

<body>
    <div class="section-container">
        <div class="section-heading">
            <p>
                Delivery Service <i class="bi bi-bag-heart-fill "></i>
            </p>
        </div>
        <div class="details-container">
            <div class="contact-form">
                <div class="login-credentials" onclick="logincredentials()">
                    <div style="display:flex;gap: 1.5rem;">
                        <button class="btn-addr1"><i class="bi bi-1-square-fill icon1"></i>LOGIN

                        </button>
                        <button class="commonbtn btn-valid"><i class="bi bi-check2 valid-icon"></i></button>
                    </div>
                    <button class="commonbtn btn-modify" onclick="handleChange1()">Change</button>
                </div>
                <div class="login-details">
                    <div class="forms-container login-container">
                        <label id="name" for="input-name">Name</label>
                        <input type="text" class="input-name" id="name" placeholder=" " value="" required>
                    </div>
                    <div class="forms-container login-container">
                        <label id="mobile" for="input-mobile">Mobile Number</label>
                        <input type="tel" class="input-mobile" id="mobile" placeholder=" " value="" required>
                    </div>
                    <p class="tovalidate"></p>
                    <button class="commonbtn btn-login" onclick="continueCheckout1()">Continue Checkout</button>
                </div>


                <div class="checkbox-section">
                    <input type="checkbox" class="deliverymode" name="deliverystatus">
                    <label for="deliverymode" class="deliverymode-content">I will pick my order myself </label>

                </div>

                <div class="address1" onclick="addressDetails()">
                    <div style="display:flex;gap: 1.5rem;">
                        <button class="btn-addr"><i class="bi bi-3-square-fill icon1"></i>Delivery Address</button>
                        <button class="commonbtn btn-valid"><i class="bi bi-check2 valid-icon"></i></button>
                    </div>
                    <button class="commonbtn btn-modify" onclick="handleChange2()">Change</button>
                </div>
                <div class="address-container">
                    <div class="forms-container">
                        <label id="doorno" for="input-addr1">Flat , Building , House No.</label>
                        <input class="input-addr1" id="doorno" placeholder=" " value="" style="width: 300px;"></input>

                    </div>
                    <div class="forms-container">
                        <label id="Street" for="input-addr3">Street Name , Area </label>
                        <input class="input-addr2" id="Street" placeholder=" " value="" style="width: 400px;"></input>

                    </div>
                    <div class="forms-container">
                        <label id="city" for="floatingTextarea">City</label>
                        <input class="input-addr3" id="city" placeholder=" " value="" style="width: 300px;"></input>

                    </div>

                    <div class="forms-container">
                        <label id="pincode" for="input-addr4">Pincode</label>
                        <input class="input-addr4" id="pincode" placeholder=" " value="" style="width: 200px;"></input>

                    </div>
                    <p class="tovalidate"></p>
                    <button class="commonbtn btn-login" onclick="continueCheckout2()">deliver Here</button>

                </div>
                <div class="orders-container">
                    <div class="forms-container summary" onclick="ordersSummary()">

                        <div style="display:flex;gap: 1.5rem;">
                            <button class="btn-addr2"><i class="bi bi-2-square-fill icon1"></i>Order
                                Summary</button> <button class="commonbtn btn-valid"><i
                                    class="bi bi-check2 valid-icon"></i></button>
                        </div>
                        <button class="commonbtn btn-modify" onclick="handleChange3()">Change</button>
                    </div>
                    <div class="orders-section">
                        <!-- contents are dynamically passed -->


                    </div>
                </div>
                <div class="forms-container payment" onclick="paymentDetails()">
                    <button class="btn-addr3"><i class="bi bi-4-square-fill icon1"></i>Payment Options</button>
                </div>
                <div class="payment-sections">

                    <div class="upi-section">
                        <img src="Assets/UPI(1).png" class="payment-img">
                        <p> UPI</p>
                       
                    </div>
                    <div class="card-section">
                        <img src="Assets/creditcard.png" class="payment-img">

                        <p> CREDIT/ DEBIT/ ATM CARD</p>
                    </div>
                    <div class="net-banking">
                        <img src="Assets/netbanking.png" class="payment-img">
                        <p> NET BANKING </p>
                        
                    </div>
                    <div class="cashDelivery-section">
                        <img src="Assets/cashondelivery.png" class="payment-img">
                        <p> Cash on Delivery</p>
                        
                    </div>


                </div>
            </div>
            <!--   <div class="sub-sections">
                        <label for="upi_app">Gpay</label>
                        <input type="checkbox" class="upi_app" name="upi_app">
                        <input type="checkbox" class="upi_id" name="upi_id">
                    </div> -->
        </div>
        <div class="price-details">
            <p class="price-heading">PRICE DETAILS</p>
            <hr>
            <div class="price-container1">
                <p class="price-orders">Price (0 item)</p>
                <p class="Total-price">Rs.10</p>
            </div>
            <div class="price-container2">
                <p class="delivery-charge">Delivery Charge</p>
                <p class="delivery-charge-price">Rs.40</p>
            </div>
            <div class="price-container3">
                <p>Packaging Charge</p>
                <p class="Packaging-price">Rs.30</p>
            </div>
            <hr>
            <div class="price-container4">
                <p>Total Payable </p>
                <p class="total-payable">Rs.500</p>
            </div>

        </div>
    </div>
    </div>
    <!--   <img class="Deliveryimg" src="Assets/dsimg.png"> -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="src/checkoutpage.js">

    </script>
</body>

</html>