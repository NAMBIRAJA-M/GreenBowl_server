<html>

<head>
    <title>
        Orders
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/checkout.css">
</head>

<body>
    <div class="section-container">
        <div class="section-heading">
            <p>
                Delivery Service
            </p>
        </div>
        <div class="details-container">
            <div class="contact-form">
                <div class="forms-container">
                    <label id="name" for="input-name" >Name</label>
                    <input type="text" class="input-name" id="name"  placeholder=" " required  >
                   
                </div>
                <div class="forms-container">
                    <label id="mobile" for="input-mobile">Mobile Number</label>
                    <input type="tel" class="input-mobile" id="mobile" placeholder=" " required  >
                    
                </div>

                <div class="forms-container">
                    <label for="input-orders" id="orders" >Order Summary</label>
                    <textarea class="input-orders" id="orders"  placeholder=" " required  ></textarea>
                    
                </div>
                <div class="checkbox-section">
                    <input type="checkbox" class="deliverymode" name="deliverystatus">
                    <label for="deliverymode" class="deliverymode-content">I will pick my order myself </label>

                </div>

                <div class="address1">
                    <button class="btn-addr" onclick="addressDetails()">Delivery Address</button>
                </div>
                <div class="address-container">
                    <div class="addr-container1">
                        <div class="forms-container">
                            <label  id="doorno" for="input-addr1">Flat , Building , House No.</label>
                            <input class="input-addr1" id="doorno"  placeholder=" " required   style="width: 300px;"></input>

                        </div>
                        <div class="forms-container">
                            <label id="Street" for="input-addr3">Street Name , Area </label>
                            <input class="input-addr2"  id="Street"  placeholder=" " required  style="width: 550px;"></input>

                        </div>
                    </div>
                    <div class="addr-container2">
                        <div class="forms-container">
                            <label id="city" for="floatingTextarea">City</label>
                            <input class="input-addr3" id="city"  placeholder=" " required  style="width: 530px;"></input>

                        </div>
                        <div class="forms-container">
                            <label id="pincode" for="input-addr4">Pincode</label>
                            <input class="input-addr4" id="pincode"  placeholder=" " required  style="width: 300px;"></input>

                        </div>
                    </div>
                </div>
            </div>
            <div class="price-details">
                <p>PRICE DETAILS</p>
                <hr>
                <div class="price-container1">
                    <p>Price (0 item)</p>
                    <p>Rs.10</p>
                </div>
                <div class="price-container2">
                    <p>Delivery Charge</p>
                    <p>Rs.40</p>
                </div>
                <div class="price-container3">
                    <p>Packaging Charge</p>
                    <p>Rs.30</p>
                </div>
                <hr>
                <div class="price-container4">
                    <p>Total Payable </p>
                    <p>Rs.500</p>
                </div>

            </div>
        </div>
        <!--   <img class="Deliveryimg" src="Assets/dsimg.png"> -->
        <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="src/checkoutpage.js">

        </script>
</body>

</html>