<html>

<head>
    <title>
        Orders
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/checkout.css">
</head>

<body>
    <div class="section-container">
        <div class="section-heading">
            <p>
                Delivery Service
            </p>
        </div>
        <div class="details-container">
            <div class="contact-form">
                <div class="form-floating ">
                    <input type="text" class="form-control custom-border" id="floatingInput" placeholder="name">
                    <label for="floatingInput">Name</label>
                </div>
                <div class="form-floating">
                    <input type="tel" class="form-control custom-border" id="floatingMobile"
                        placeholder="Mobile Number">
                    <label for="floatingMobile">Mobile Number</label>
                </div>

                <div class="form-floating">
                    <textarea class="form-control custom-border" placeholder="Leave a comment here"
                        id="floatingTextarea"></textarea>
                    <label for="floatingTextarea">Order Summary</label>
                </div>
                <div class="checkbox-section">
                    <input type="checkbox" class="deliverymode" name="deliverystatus">
                    <label for="deliverymode" class="deliverymode-content">I will pick my order myself </label>

                </div>

                <div class="address1" >
                    <button class="btn-addr" onclick="addressDetails()">Delivery Address</button>
                </div>
                <div class="address-container">
                    <div class="addr-container1">
                        <div class="form-floating">
                            <textarea class="form-control custom-border " style="width: 300px;" placeholder="door no."
                                id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">Flat , Building , House No.</label>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control custom-border"  style="width: 550px;" placeholder="Street name"
                                id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">Street Name , Area </label>
                        </div>
                    </div>
                    <div class="addr-container2">
                        <div class="form-floating">
                            <textarea class="form-control custom-border"  style="width: 530px;" placeholder="city"
                                id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">City</label>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control custom-border"  style="width: 300px;" placeholder="Pincode"
                                id="floatingTextarea"></textarea>
                            <label for="floatingTextarea">Pincode</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="price-details">
                <p>PRICE DETAILS</p>
                <hr>
                <div class="price-container1">
                    <p>Price (0 item)</p>
                    <p>Rs.10</p>
                </div>
                <div class="price-container2">
                    <p>Delivery Charge</p>
                    <p>Rs.40</p>
                </div>
                <div class="price-container3">
                    <p>Packaging Charge</p>
                    <p>Rs.30</p>
                </div>
                <hr>
                <div class="price-container4">
                    <p>Total Payable </p>
                    <p>Rs.500</p>
                </div>

            </div>
        </div>
        <!--   <img class="Deliveryimg" src="Assets/dsimg.png"> -->
        <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="src/checkoutpage.js">

        </script>
</body>

</html>